{
  "name": "auth-express",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "author": "Sardar Atabekov",
  "keywords": [
    "react",
    "TailwindCSS",
    "Wouter",
    "Express",
    "Mongoose",
    "JWT",
    "TypeScript",
    "ESLint",
    "Prettier",
    "Husky",
    "Vite",
    "Zod"
  ],
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon --watch src --ext ts --exec tsx src/index.ts",
    "build": "esbuild src/index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "check": "tsc",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format-check": "prettier --check .",
    "lint": "node scripts/lint.js",
    "lint-fix": "node scripts/lint.js --fix",
    "postinstall": "husky install",
    "test": "vitest",
    "db:push": "drizzle-kit push",
    "db:indexes": "tsx src/scripts/apply-indexes.ts"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.39.3",
    "drizzle-zod": "^0.7.0",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "pg": "^8.16.3",
    "supertest": "^7.1.1",
    "ws": "^8.18.0",
    "zod": "^3.24.2",
    "zod-validation-error": "^3.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/express": "4.17.21",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "20.16.11",
    "@types/passport": "^1.0.16",
    "@types/passport-local": "^1.0.38",
    "@types/pg": "^8.15.4",
    "@types/ws": "^8.5.13",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "commitlint": "^19.8.1",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.31.4",
    "esbuild": "^0.21.4",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-define-config": "^2.1.0",
    "eslint-import-resolver-typescript": "^4.4.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-promise": "^7.2.1",
    "husky": "^9.0.0",
    "lint-staged": "^16.0.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "tsx": "^4.19.1",
    "typescript": "~5.7.2",
    "vitest": "^3.2.3"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.8"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --cache",
      "prettier --write --color"
    ],
    "*.{css,scss}": [
      "prettier --write --color"
    ],
    "*.{json,md,html}": [
      "prettier --write --color"
    ]
  }
}
